<a href="/" class="ref">Ir a formulario</a>
<h2>Productos</h2>
<% if(productos.length !== 0) { %>

<table>
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Imagen</th>
    </tr>
    <% productos.forEach((i) => { %>
    <tr>
        <td><%= i.title %></td>
        <td><%= i.price %></td>
        <td>
            <img
                class="img"
                src="<%= i.thumbnail %>"
                alt="imagen del producto"
            />
        </td>
    </tr>
    <% }); %>
</table>
<% } else { %>
<h3>No hay productos agregados!</h3>

<% } %>
